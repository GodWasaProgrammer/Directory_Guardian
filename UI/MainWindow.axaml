<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.ViewModels"
        mc:Ignorable="d"
        x:DataType="local:MainViewModel"
        d:DesignWidth="400" d:DesignHeight="225"
        x:Class="UI.MainWindow"
        Title="Directory Guardian">
	<Window.DataContext>
		<local:MainViewModel/>
	</Window.DataContext>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="0">
			<Button Click="OpenFolderButton_Clicked">Choose Directory</Button>
			<Button Click="PassChosenFiletypeToSortOnClick">Select File types</Button>
		</StackPanel>
		<ListBox ItemsSource="{Binding Items}" Grid.Column="1">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<CheckBox IsChecked="{Binding IsChecked}" />
						<TextBlock Text="{Binding Text}" Margin="5,0,0,0" />
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</Window>


